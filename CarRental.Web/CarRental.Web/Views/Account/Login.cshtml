@{
    ViewData["Title"] = "Вход";
}

<h2 class="text-center">Вход в систему</h2>

<form asp-action="Login" method="post" class="w-50 mx-auto mt-4">
    <div class="mb-3">
        <label class="form-label">Телефон</label>
        <input type="text" name="phone" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Серия паспорта</label>
        <input type="text" name="passport" class="form-control" required />
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <button type="submit" class="btn btn-primary w-100">Войти</button>

    <p class="text-center mt-3">
        Нет аккаунта? <a asp-action="Register">Зарегистрироваться</a>
    </p>
</form>
