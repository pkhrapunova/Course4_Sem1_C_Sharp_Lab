@model IEnumerable<CarRental.Web.Models.Car>
@{
    ViewData["Title"] = "Админ-панель";
    var orders = ViewBag.Orders as List<CarRental.Web.Models.Order>;
}

<h2>Административная панель</h2>

<h3>Автомобили</h3>
<a asp-controller="Cars" asp-action="Create" class="btn btn-primary mb-3">Добавить авто</a>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Марка</th>
            <th>Номер</th>
            <th>Цена</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.CarID</td>
                <td>@car.Make</td>
                <td>@car.CarNumber</td>
                <td>@car.PricePerHour</td>
            </tr>
        }
    </tbody>
</table>

<h3>Заказы</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Клиент</th>
            <th>Авто</th>
            <th>Дата</th>
            <th>Часы</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in orders)
        {
            <tr>
                <td>@order.Customer.FullName</td>
                <td>@order.Car.Make (@order.Car.CarNumber)</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.Hours</td>
            </tr>
        }
    </tbody>
</table>
