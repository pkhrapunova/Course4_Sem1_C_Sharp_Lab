@model CarRental.Web.Models.Order

@{
    ViewData["Title"] = "Создать заказ";
    bool isAdmin = Context.Session.GetString("IsAdmin") == "true";
}

<h2 class="mb-3">Создание заказа</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="CarID" class="form-label">Автомобиль</label>
        <select asp-for="CarID" class="form-select" asp-items="ViewBag.CarID"></select>
        <span asp-validation-for="CarID" class="text-danger"></span>
    </div>

    @if (isAdmin)
    {
        <div class="form-group mb-3">
            <label asp-for="CustomerID" class="form-label">Клиент</label>
            <select asp-for="CustomerID" class="form-select" asp-items="ViewBag.CustomerID"></select>
            <span asp-validation-for="CustomerID" class="text-danger"></span>
        </div>
    }

    <div class="form-group mb-3">
        <label asp-for="Hours" class="form-label">Количество часов аренды</label>
        <input asp-for="Hours" class="form-control" type="number" min="1" />
        <span asp-validation-for="Hours" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="OrderDate" class="form-label">Дата бронирования</label>
        <input asp-for="OrderDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Создать заказ</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}