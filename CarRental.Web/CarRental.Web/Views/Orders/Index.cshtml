@model IEnumerable<CarRental.Web.Models.Order>

@{
    ViewData["Title"] = "Список заказов";
    bool isAdmin = Context.Session.GetString("IsAdmin") == "true";
}

<h1 class="mb-3">Список заказов</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Добавить заказ
    </a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            @if (isAdmin)
            {
                <th>Клиент</th>
            }
            <th>Автомобиль</th>
            <th>Дата заказа</th>
            <th>Часы аренды</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                @if (isAdmin)
                {
                    <td>@order.Customer?.FullName</td>
                }
                <td>@order.Car?.Make</td>
                <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                <td>@order.Hours</td>
            </tr>
        }
    </tbody>
</table>
