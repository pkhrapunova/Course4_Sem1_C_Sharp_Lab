@model CarRental.Web.Models.Car

@{
    ViewData["Title"] = "Добавить автомобиль";
}

<h2>Добавить автомобиль</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post" class="mt-3">
    <div class="form-group mb-3">
        <label asp-for="CarNumber" class="form-label"></label>
        <input asp-for="CarNumber" class="form-control" />
        <span asp-validation-for="CarNumber" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Make" class="form-label"></label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Mileage" class="form-label"></label>
        <input asp-for="Mileage" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Status" class="form-label"></label>
        <input asp-for="Status" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Seats" class="form-label"></label>
        <input asp-for="Seats" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="PricePerHour" class="form-label"></label>
        <input asp-for="PricePerHour" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Photo" class="form-label"></label>
        <input type="file" name="photoFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Добавить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
