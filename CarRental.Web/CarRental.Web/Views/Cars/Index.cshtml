@model IEnumerable<CarRental.Web.Models.Car>

@{
    ViewData["Title"] = "Список автомобилей";
}

<h2 class="mb-4 text-center">Список автомобилей</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Добавить автомобиль
    </a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark text-center">
        <tr>
            <th>Фото</th>
            <th>Номер</th>
            <th>Марка</th>
            <th>Пробег</th>
            <th>Статус</th>
            <th>Места</th>
            <th>Цена/час (₽)</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var car in Model)
            {
                        <tr class="text-center">
                            <td style="width:150px">
                        @if (car.PhotoBase64 != null)
                        {
                                        <img src="data:image/png;base64,@car.PhotoBase64" alt="Фото" class="img-thumbnail" width="100" />
                        }
                        else
                        {
                                        <span class="text-muted">Нет фото</span>
                        }
                            </td>
                            <td>@car.CarNumber</td>
                            <td>@car.Make</td>
                            <td>@car.Mileage км</td>
                            <td>@car.Status</td>
                            <td>@car.Seats</td>
                            <td>@car.PricePerHour.ToString("0.00")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@car.CarID" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> Просмотр
                                </a>
                                <a asp-action="Edit" asp-route-id="@car.CarID" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Изменить
                                </a>
                                <a asp-action="Delete" asp-route-id="@car.CarID" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Удалить
                                </a>
                            </td>
                        </tr>
            }
        }
        else
        {
                <tr>
                    <td colspan="8" class="text-center text-muted">Автомобили отсутствуют</td>
                </tr>
        }
    </tbody>
</table>
