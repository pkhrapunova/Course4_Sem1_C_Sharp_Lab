@model CarRental.Web.Models.Car

@{
    ViewData["Title"] = "Редактировать автомобиль";
}

<h2>Редактировать автомобиль</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post" class="mt-3">
    <input type="hidden" asp-for="CarID" />

    <div class="form-group mb-3">
        <label asp-for="CarNumber" class="form-label"></label>
        <input asp-for="CarNumber" class="form-control" />
        <span asp-validation-for="CarNumber" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Make" class="form-label"></label>
        <input asp-for="Make" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Mileage" class="form-label"></label>
        <input asp-for="Mileage" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Status" class="form-label"></label>
        <input asp-for="Status" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Seats" class="form-label"></label>
        <input asp-for="Seats" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="PricePerHour" class="form-label"></label>
        <input asp-for="PricePerHour" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Текущее фото</label><br />
        @if (Model.PhotoBase64 != null)
        {
            <img src="data:image/png;base64,@Model.PhotoBase64" width="150" class="rounded mb-2" />
        }
        else
        {
            <p class="text-muted">Фото отсутствует</p>
        }

        <label class="form-label">Новое фото</label>
        <input type="file" name="photoFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
